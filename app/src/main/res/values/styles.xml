<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="RegularTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/cuprum</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="LightTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>
        <item name="actionMenuTextColor">@color/colorTextLight</item>
    </style>

</resources>
